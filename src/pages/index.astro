---
import Layout from '../layouts/Layout.astro'
---

<Layout title="Welcome to Astro.">
  <main>
    <h1>
      {`Workout`}
      <span class="text-gradient">4</span>
      {` Wildlife`}
    </h1>
    <h2>Stay Tuned!</h2>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    max-width: 60ch;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }
  h2 {
    font-size: 2rem;
    font-weight: 600;
    margin: 0;
  }
  .text-gradient {
    background-image: linear-gradient(#eee, #000);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  @media only screen and (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }
    h2 {
      font-size: 1rem;
    }
  }
</style>
