const stops = [
  {
    title: 'Kwessi Dunes',
    text: 'An unforgettable desert experience amidst orange dunes, a star gazer room, a campfire, a pool, and never-ending views.',
    logo: NaturalSelectionLogo,
    cover: KwessiDunes,
  },
  {
    title: 'Ai Aiba Lodge',
    text: 'An eco-friendly and sophisticated exploration of nature in the Erongo Mountains â€” famous for rock painting sites. ',
    logo: BigSkyLodgesLogo,
    cover: AiAibaLodge,
  },
  {
    title: 'Namibia Sky Balloon Safaris',
    text: 'Soar over the panoramic Namibian desert for sunrise on the flight of a lifetime before landing for champagne breakfast.',
    logo: NamibaSkyLogo,
    cover: NamibaSky,
  },
  {
    title: 'The Weinberg',
    text: 'Experience old-world splendour on a sprawling estate, where you can indulge in wine tastings and culinary treats. ',
    logo: GondwanaLogo,
    cover: TheWeinberg,
  },
  {
    title: 'Mola Mola Safaris',
    text: "Up-close encounters with Namibia's marine animals, be it on the coastal dunes or the ocean, with drinks, food and oysters.",
    logo: MolaMolaLogo,
    cover: MolaMola,
  },
  {
    title: 'Safarihoek',
    text: 'Modern comfort overlooking Etosha National Park, a large waterhole, and expansive plains, offering immersion in wildlife and nature.',
    logo: NaturalSelectionLogo,
    cover: SafarihoekLodge,
  },
  {
    title: 'Etendeka walking trail',
    text: "Immersive trekking in Namibia's untouched landscape, exploring ancient rock formations and spending the night under the stars.",
