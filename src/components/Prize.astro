---
import Section from '@components/Section.astro';
import PrizeStops from '@components/PrizeStops';

import NaturalSelectionLogo from '@images/NaturalSelection.webp';
import KwessiDunes from '@images/09KwessiDunes.webp';
import BigSkyLodgesLogo from '@images/BigSkyLodges.webp';
import AiAibaLodge from '@images/05AiAibaLodge.webp';
import NamibaSkyLogo from '@images/NamibaSky.webp';
import NamibaSky from '@images/08NamibSky.webp';
import GondwanaLogo from '@images/Gondwana.webp';
import TheWeinberg from '@images/01TheWeinberg.webp';
import MolaMolaLogo from '@images/MolaMola.webp';
import MolaMola from '@images/06MolaMola.webp';
import SafarihoekLodge from '@images/03SafarihoekLodge.webp';
