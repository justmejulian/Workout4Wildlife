---
export interface Props {
  height: string;
  class?: string;
  visible: boolean;
}

const { visible, class: className, height }: Props = Astro.props;
---

<svg class={className} xmlns="http://www.w3.org/2000/svg">
  <path
    d="M3 3L3.00002 413"
    stroke="#767676"
    stroke-width="4"
    stroke-linecap="round"
    stroke-dasharray="12 12"></path>
</svg>

<style define:vars={{ visibility: visible ? 'visible' : 'hidden', height }}>
  svg {
    height: var(--height);
    width: 6px;
    visibility: var(--visibility);
  }
</style>
