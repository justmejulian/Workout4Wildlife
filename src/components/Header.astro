---
interface Props {
  align: 'left' | 'center';
  text: string;
}

const { align, text }: Props = Astro.props;
---

<h1 class:list={[{ left: align === 'left', center: align === 'center' }]}>
  {text}
</h1>

<style>
  h1 {
    position: relative;
    font-family: 'KronaOne-Regular';
    font-style: normal;
    font-weight: 400;
    font-size: 50px;
    line-height: 62px;
    color: #541736;
    margin: 0px;
  }

  h1::after {
    background-color: #fe9fab;
    content: '';
    width: 92px;
    height: 6px;
    position: absolute;
    bottom: -16px;
  }

  .left::after {
    left: 0px;
  }

  .center {
    text-align: center;
  }

  .center::after {
    left: 0px;
    right: 0px;
    margin: auto;
  }

  @media only screen and (max-width: 970px) {
    .left::after {
      left: 0px;
      right: 0px;
      margin: auto;
    }

    .left {
      text-align: center;
    }
  }
</style>
