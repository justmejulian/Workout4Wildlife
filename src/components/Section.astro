---
import Header from './Header.astro';

interface Props {
  id: string;
  title: string;
  text?: string;
}

const { id, title, text }: Props = Astro.props;
---

<div id={id}>
  <Header text={title} align="center" />
  <p>{text}</p>
  <slot />
</div>

<style>
  div {
    box-sizing: border-box;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    overflow: hidden;

    padding: 60px 200px;
  }
  p {
    margin-top: 40px;
    font-family: 'Satoshi-Medium';
    font-weight: 500;
    font-size: 25px;
    line-height: 34px;
    text-align: center;
    color: #767676;
  }

  @media only screen and (max-width: 970px) {
    div {
      padding: 60px 100px;
    }
  }
</style>
