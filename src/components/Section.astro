---
import Header from './Header.astro';

interface Props {
  id: string;
  title: string;
  text?: string;
  isGray?: boolean;
}

const { id, title, text, isGray }: Props = Astro.props;
---

<div id={id} class:list={[{ gray: isGray }]}>
  <Header text={title} align="center" />
  <p>{text}</p>
  <slot />
</div>

<style>
  div {
    box-sizing: border-box;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    padding: 60px 200px;
  }

  .gray {
    background-color: #f4f4f4;
  }

  p {
    margin-top: 40px;
    font-family: 'Satoshi-Medium';
    font-weight: 500;
    font-size: 25px;
    line-height: 34px;
    text-align: center;
    color: #767676;
  }

  @media (max-width: 1200px) {
    div {
      padding: 60px 40px;
    }
  }

  @media (max-width: 1200px) {
    #navigation {
      padding: 20px 40px;
    }
  }

  @media only screen and (max-width: 970px) {
    div {
      padding: 30px 40px;
    }

    p {
      text-align: center;
      font-size: 16px;
    }
  }
</style>
