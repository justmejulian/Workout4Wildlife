---
import SignUpStepDottedLine from '@components/SignUpStepDottedLine.astro';

export interface Props {
  stepNumber: number;
  title: string;
  text: string;
  linesLeft: boolean;
  linesRight: boolean;
}

const { stepNumber, title, text, linesLeft, linesRight } = Astro.props;
---

<div class="sign-up-step">
  <div class="step-number-container">
    <SignUpStepDottedLine visible={linesLeft} />
    <div class="step-number">
      {stepNumber}
    </div>
    <SignUpStepDottedLine visible={linesRight} />
  </div>
  <div class="step-body">
    <h3>{title}</h3>
    <p class="step-text">
      {text}
    </p>
  </div>
</div>

<style>
  .sign-up-step {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 236px;
  }

  .step-number-container {
    display: flex;
    align-items: center;
    margin-bottom: 25px;
  }

  .step-number {
    height: 50px;
    width: 50px;
    text-align: center;
    line-height: 50px;
    border-radius: 50%;
    color: white;
    background-color: #fe9fab;
    font-size: 40px;
    font-weight: 700;
    font-family: 'Satoshi-Bold';
  }

  .step-title {
    font-size: 30px;
    font-weight: 900;
    font-family: 'Satoshi-Black';
    color: #541736;
    text-align: center;
    margin: 0;
    margin-bottom: 25px;
  }

  .step-text {
    font-size: 20px;
    font-weight: 500;
    font-family: 'Satoshi-Medium';
    line-height: 27px;
    color: #767676;
    text-align: center;
    margin: 0;
    width: 135px;
  }

  @media only screen and (max-width: 970px) {
    .sign-up-step {
      flex-direction: row;
    }

    .step-number-container {
      flex-direction: column;
      margin-bottom: 0px;
    }

    .step-number {
    }

    .step-body {
      margin-left: 20px;
    }

    .step-title {
      font-size: 20px;
      line-height: 27px;
      text-align: left;
      margin-bottom: 4px;
    }

    .step-text {
      font-size: 16px;
      line-height: 22px;
      text-align: left;
      width: 192px;
    }
  }
</style>
