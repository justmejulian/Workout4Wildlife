---
export interface Props {
  stepNumber: number;
  title: string;
  text: string;
  linesLeft: boolean;
  linesRight: boolean;
}

const { stepNumber, title, text, linesLeft, linesRight } = Astro.props;
---

<div class="sign-up-step">
  <div class="step-number">
    {stepNumber}
  </div>
  <div class="step-body">
    <h3 class="step-title">{title}</h3>
    <p class="step-text">
      {text}
    </p>
  </div>
  {linesLeft && <div class="lines lines-left" />}
  {linesRight && <div class="lines lines-right" />}
</div>

<style>
  .sign-up-step {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 150px;
  }
  .step-number {
    height: 50px;
    width: 50px;
    text-align: center;
    line-height: 50px;
    border-radius: 50%;
    color: white;
    background-color: #fe9fab;
    font-size: 40px;
    font-weight: 700;
    font-family: 'Satoshi-Bold';
    margin-bottom: 25px;
  }
  .step-title {
    font-size: 30px;
    font-weight: 900;
    font-family: 'Satoshi-Black';
    color: #541736;
    text-align: center;
    margin: 0;
    margin-bottom: 25px;
  }
  .step-text {
    font-size: 20px;
    font-weight: 500;
    font-family: 'Satoshi-Medium';
    line-height: 27px;
    color: #767676;
    text-align: center;
    margin: 0;
  }
  .lines {
    position: absolute;
    top: 22px;
    width: 90px;
    height: 6px;
    background-image: linear-gradient(
      to right,
      #ffe660 75%,
      rgba(255, 255, 255, 0) 25%
    );
    background-position: 0 0;
    background-size: 24px 6px;
    background-repeat: repeat-x;
    border-radius: 3px;
  }
  .lines-left {
    left: 115px;
  }
  .lines-right {
    right: 115px;
  }
</style>
