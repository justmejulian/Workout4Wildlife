---
export interface Props {
  class: string;
  visible: boolean;
}

const { visible, class: className }: Props = Astro.props;
---

<svg class={className} xmlns="http://www.w3.org/2000/svg">
  <path
    d="M3 3L179 3.00002"
    stroke="#767676"
    stroke-width="4"
    stroke-linecap="round"
    stroke-dasharray="14 14"></path>
</svg>

<style define:vars={{ visibility: visible ? 'visible' : 'hidden' }}>
  svg {
    height: 6px;
    width: 104px;
    visibility: var(--visibility);
  }
</style>
