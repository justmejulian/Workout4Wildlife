---
import SignUpButton from '@components/SignUpButton';

interface Props {
  showSignUp: boolean;
}

const { showSignUp }: Props = Astro.props;
---

<div id="hero">
  <p>
    Win a once-in-a-lifetime trip to Namibia worth $15,000 and experience
    wildlife conservation first hand.
  </p>
  {showSignUp && <SignUpButton />}
</div>

<style>
  #hero {
    width: 100%;
    height: calc(var(--base-font-size) * 40);

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    overflow: hidden;

    background: url('../images/hero-desktop.png');
    background-position: center;
    background-size: cover;
  }

  p {
    font-family: 'Satoshi-Bold';
    font-size: calc(var(--base-font-size) * 2);
    font-weight: 700;
    letter-spacing: 0em;
    margin: 0px;
    max-width: calc(var(--base-font-size) * 30);
    text-align: center;
    color: #ffffff;
    margin-bottom: calc(var(--base-font-size) * 5);
  }

  @media only screen and (max-width: 970px) {
    #hero {
      height: 456px;
      background: url('../images/hero-mobile.png');
      background-position: center;
      background-size: cover;
    }
  }
</style>
