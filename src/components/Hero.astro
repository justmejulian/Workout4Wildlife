---
import SignUpButton from '@components/SignUpButton';

interface Props {
  showSignUp: boolean;
}

const { showSignUp }: Props = Astro.props;
---

<div id="hero">
  <p>
    Win a once-in-a-lifetime trip to Namibia worth $15,000 and experience
    wildlife conservation first hand.
  </p>
  {showSignUp && <SignUpButton />}
</div>

<style>
  #hero {
    width: 100%;
    height: 640px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    overflow: hidden;

    background: url('../images/hero-desktop.png');
    background-position: center;
    background-size: cover;
  }
  p {
    max-width: 684px;
    font-family: 'Satoshi-Bold';
    font-size: 36px;
    line-height: 48px;
    letter-spacing: 0em;
    text-align: center;
    color: #ffffff;
    margin: 0px;
    margin-bottom: 100px;
  }

  @media only screen and (max-width: 970px) {
    #hero {
      height: 456px;
      background: rgba(0, 0, 0, 0.4) url('../images/hero-mobile.png');
      background-blend-mode: multiply;
      background-position: center -32px;
    }

    p {
      font-size: 24px;
      line-height: 32px;
      margin-bottom: 60px;
    }
  }
</style>
