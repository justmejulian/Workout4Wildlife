---
import SignUpButton from '@components/SignUpButton';

interface Props {
  showSignUp?: boolean;
}

const { showSignUp = false }: Props = Astro.props;
---

<div id="hero">
  <p class="prize">
    {'Win a '}<span>{'$15,000 '}</span>{
      ' trip to Namibia* and experience conservation'
    }
    <br />
    {' first hand.'}
  </p>
  {showSignUp && <SignUpButton client:load />}
  <p class="dates">
    {'Workout announcement '}<span>{'April 14'}</span>
    <br />
    {'Workout submission '}<span>{'April 24'}</span>
    <br />
    {'Participation fee '}<span>{'$20'}</span>
  </p>
  <p class="tcs">
    {'*T&Cs apply'}
  </p>
</div>

<style>
  #hero {
    width: 100%;

    display: flex;
    flex-direction: column;
    align-items: center;
    overflow: hidden;

    background: url('../images/hero-desktop.png'),
      url('../images/hero-desktop.jpg');
    background-position: center;
    background-size: cover;
  }

  p {
    font-family: 'Satoshi-Regular';
    font-size: calc(var(--base-font-size) * 2);
    max-width: calc(var(--base-font-size) * 33);
    text-align: center;
    color: #ffffff;
    margin: calc(var(--base-font-size) * 4) 0px;
  }

  .dates {
    margin-bottom: calc(var(--base-font-size) * 2);
  }

  .tcs {
    margin: 0px;
    font-size: var(--base-font-size);
    margin-bottom: calc(var(--base-font-size) * 0.5);
  }

  span {
    font-family: 'Caveat-Bold';
    font-weight: 700;
    font-size: calc(var(--base-font-size) * 4);
    color: #fee878;
  }

  @media only screen and (max-width: 970px) {
    #hero {
      background: url('../images/hero-mobile.png'),
        url('../images/hero-mobile.jpg');
      background-position: center;
      background-size: cover;
    }

    p {
      font-size: calc(var(--base-font-size) * 1);
      max-width: calc(var(--base-font-size) * 20);
    }

    span {
      font-size: calc(var(--base-font-size) * 2);
    }

    .prize {
      order: -2;
      margin-top: calc(var(--base-font-size) * 1);
      margin-bottom: calc(var(--base-font-size) * 2);
    }

    .dates {
      order: -1;
      margin-top: 0px;
      margin-bottom: calc(var(--base-font-size) * 6);
    }

    .tcs {
      margin-top: calc(var(--base-font-size) * 2);
    }
  }
</style>
